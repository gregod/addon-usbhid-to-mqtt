{
    "name": "USB Hid to Mqtt",
    "version": "dev",
    "slug": "usbhid-to-mqtt",
    "description": "Submits token entered via usb hid to mqtt topic",
    "url": "https://github.com/gregod/addon-usbhid-to-mqtt",
    "startup": "application",
    "arch": [
        "aarch64",
        "amd64",
        "armhf",
        "i386"
    ],
    "boot": "auto",
    "hassio_api": true,
    "services": ["mqtt:need"],
    "homeassistant_api": true,
"apparmor": false,
  "full_access": true,
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN",
    "SYS_RAWIO",
    "SYS_TIME",
    "SYS_NICE"
],
    "hassio_role": "homeassistant",
    "schema":  {
        "device" : "str",
        "mqtt_connection_string" : "str",
        "mqtt_topic" : "str"
    },
    "options" : {
        "mqtt_connection_string":"mqtt://test.mosquitto.org",
        "device" : "/dev/input/event2",
        "mqtt_topic" : "ggtest/tokens"
    },
    "image": "gregod/{arch}-addon-usbhid-to-mqtt"
  }
