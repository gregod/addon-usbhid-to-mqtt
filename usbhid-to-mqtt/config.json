{
    "name": "USB Hid to Mqtt",
    "version": "0.2",
    "slug": "usbhid-to-mqtt",
    "description": "Submits token entered via usb hid to mqtt topic",
    "url": "https://github.com/gregod/addon-usbhid-to-mqtt",
    "startup": "application",
    "arch": [
        "aarch64",
        "amd64",
        "armhf",
        "i386"
    ],
    "boot": "auto",
    "hassio_api": true,
    "services": ["mqtt:want"],
    "homeassistant_api": true,
    "apparmor": false,
    "full_access": true,
    "hassio_role": "homeassistant",
    "privileged": [
            "SYS_ADMIN",
            "SYS_RAWIO"
    ],
    "schema":  {
        "device" : "str",
        "mqtt_connection_string" : "str",
        "mqtt_topic" : "str"
    },
    "options" : {
        "mqtt_connection_string" : "mqtt://[username:password@]homeassistant",
        "device" : "/dev/input/event2",
        "mqtt_topic" : "usbhid/tokens"
    },
    "image": "gregod/{arch}-addon-usbhid-to-mqtt"
  }
